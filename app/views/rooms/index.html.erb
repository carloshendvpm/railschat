<div class="grid grid-cols-3">
  <div class="container p-4 flex flex-col gap-1 mx-4 col-span-1">
    <%= render 'layouts/new_room_form'%>
    <h4>Rooms</h4>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms" class="mb-2 flex flex-col gap-1">
      <%= render @rooms %>
    </div>
    <h4> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users" class="mb-2 flex flex-col gap-1">
      <%= render @users %>
    </div>

</div>
  <div class="col-span-2 grid center" id="room_container">
    <% if @single_room %>
      <div id="single_room" class="h-[calc(100vh-150px)]">
        <h4 class="text-center"><%= @user&.email || @single_room.name %></h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages" class="h-[calc(100vh-150px)] overflow-y-scroll overflow-x-hidden chat chat-start">
          <%= render @messages %>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>